extends ../layout/base 
block content 
	section.content-header 
		h1 
			|  Data Motor
			small Dealer Nusantara
		ol.breadcrumb 
			li 
				a(href='#') 
					i.fa.fa-dashboard
					| 
			li.active  
	section.content
		.box
			.box-header.with-border
				h3.box-title
					| Edit Data Motor
				.box-tools.pull-right
					button(type='button', data-widget='collapse', data-toggle='tooltip',title='collapse').btn.btn-box-tool
						i.fa.fa-minus
					
			.box-body
				form(role='form',method='post' action='/motor/edit/#{(id==undefined) ? data.id : id}')
					.row
						
						.col-xs-6
							.box-body
								- if (messages.msg_error) 
									.alert.alert-danger.alert-dismissable 
										button.close(type='button', data-dismiss='alert', aria-hidden='true') 
											| ×
										h4
											i.icon.fa.fa-ban
											| Alert! 
										| !{messages.msg_error}
								- if (messages.msg_info) 
									.alert.alert-success.alert-dismissable 
										button.close(type='button', data-dismiss='alert', aria-hidden='true') 
											| ×
										h4
											i.icon.fa.fa-ban
											| Success! 
										| !{messages.msg_info}
								.form-group
									label
										| Kode Motor
									input(type='text',value="#{ (kode_motor == undefined) ? data.kode_motor : kode_motor}",name='kode_motor',placeholder='Enter Kode Motor').form-control
								.form-group
									label
										| No Rangka
									input(type='text',value="#{ (no_rangka == undefined) ? data.no_rangka : no_rangka}",name='no_rangka',placeholder='Enter No Rangka').form-control
								.form-group
									label
										| No Mesin
									input(type='text',value="#{ (no_mesin == undefined) ? data.no_mesin : no_mesin}",name='no_mesin',placeholder='Enter No Mesin').form-control
								.form-group
									label
										| Kode Kategori
									input(type='text',value="#{ (kode_kategori == undefined) ? data.kode_kategori : kode_kategori}",name='kode_kategori',placeholder='Enter Kode Kategori').form-control
								.form-group
									label
										| Type Motor
									input(type='text',value="#{ (type == undefined) ? data.type : type }",name='type',placeholder='Enter Type Motor').form-control
								.form-group
									label
										| Tahun Pembuatan 
									input(type='text',value="#{ (tahun == undefined) ? data.tahun : tahun }",name='tahun',placeholder='Enter Tahun Pembuatan').form-control
								.form-group
									label
										| Warna Motor
									input(type='text',value="#{ (warna == undefined) ? data.warna : warna }",name='warna',placeholder='Enter Warna Motor').form-control
								.form-group
									label
										| Harga
									input(type='text',value="#{ (harga == undefined) ? data.harga : harga }",name='harga',placeholder='Enter Harga Motor').form-control
								.form-group
							.box-footer
								input(type="hidden",name="_method", value="PUT")
								button(type='submit').btn.btn-primary
									i.fa.fa-pencil 
									|  Edit
								a(href='/motor').btn.btn-primary.pull-right
									| Back