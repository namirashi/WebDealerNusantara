extends ../layout/base 
block content 
	section.content-header 
		h1 
			| Data Kategori
			small Dealer Nusantara
		ol.breadcrumb 
			li 
				a(href='#') 
					i.fa.fa-dashboard
					| 
			li.active 
	section.content
		.box
			.box-header.with-border
				h3.box-title
					| Edit Data Kategori
					button(type='button', data-widget='collapse', data-toggle='tooltip',title='collapse').btn.btn-box-tool
						i.fa.fa-minus
					
			.box-body
				form(role='form',method='post' action='/kategori/edit/#{(id==undefined) ? data.id : id}')
					.row
						
						.col-xs-6
							.box-body
								- if (messages.msg_error) 
									.alert.alert-danger.alert-dismissable 
										button.close(type='button', data-dismiss='alert', aria-hidden='true') 
											| ×
										h4
											i.icon.fa.fa-ban
											| Alert! 
										| !{messages.msg_error}
								- if (messages.msg_info) 
									.alert.alert-success.alert-dismissable 
										button.close(type='button', data-dismiss='alert', aria-hidden='true') 
											| ×
										h4
											i.icon.fa.fa-ban
											| Success! 
										| !{messages.msg_info}
								.form-group
									label
										| Kode Kategori
									input(type='text',value="#{ (kode_kategori == undefined) ? data.kode_kategori : kode_kategori}",name='kode_kategori',placeholder='Enter Merek').form-control
								.form-group
								label
										| Gambar
									input(type='file',name='gambar').form-control
								.form-group
									label
										| Merk
									input(type='text',value="#{ (merk == undefined) ? data.merk : merk }",name='merk',placeholder='Enter Merk').form-control
								.form-group
									label
										| Type Motor
									input(type='text',value="#{ (type == undefined) ? data.type : type }",name='type',placeholder='Enter type Motor').form-control
								.form-group
										| Nama Motor
									input(type='text',value="#{ (nama == undefined) ? data.nama : nama }",name='nama',placeholder='Enter Nama Motor').form-control
								.form-group
							.box-footer
								input(type="hidden",name="_method", value="PUT")
								button(type='submit').btn.btn-primary
									i.fa.fa-pencil 
									|  Edit
								a(href='/kategori').btn.btn-primary.pull-right
									| Back