extends ../layout/base
block content
    section.content-header
        h1
            | Data Customer
            small Dealer Nusantara
        ol.breadcrumb
            li
                a(href='#')
                    i.fa.fa-dashboard
                    | 
                li.active 
    section.content
        .box
            .box-header.with-border
                h3.box-title
                    | Add Data Customer
                .box-tools.pull-right
                    button(type='button', data-widget='collapse', data-toggle='tooltip',title='collapse').btn.btn-box-tool
                        i.fa.fa-minus

            .box-body
                form(role='form',method='post' action='/customers/add')
                    .row

                        .col-xs-6
                            .box-body
                                - if (messages.msg_error)
                                    .alert.alert-danger.alert-dismissable
                                        button.close(type='button', data-dismiss='alert', aria-hidden='true')
                                            | Ã—
                                        h4
                                            i.icon.fa.fa-ban
                                            | Alert!
                                        | !{messages.msg_error}
                                .form-group
                                label
                                        | Id Customer
                                    input(type='text',name='id_cust',placeholder='Enter Id Customer').form-control
                                .form-group
                                    label
                                        | Nama Customer
                                    input(type='text',value='#{nama}',name='nama',placeholder='Enter Name').form-control
                                .form-group
                                    label
                                        | Pembayaran
                                    input(type='text',name='pembayaran',placeholder='Enter Pembayaran').form-control
                                .form-group
                                    label
                                        | Tanggal
                                    input(type='text',name='tanggal',placeholder='Enter Tanggal').form-control
                                .form-group    
                                    label
                                        | Alamat
                                    input(type='text',name='alamat',placeholder='Enter Alamat').form-control
                                .form-group
                            .box-footer
                                button(type='submit').btn.btn-primary
                                    | Submit

                                a(href='/customers').btn.btn-primary.pull-right
                                    | Back