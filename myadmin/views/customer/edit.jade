extends ../layout/base 
block content 
	section.content-header 
		h1 
			| Data Customer
			small Dealer Nusantara
		ol.breadcrumb 
			li 
				a(href='#') 
					i.fa.fa-dashboard
					|  
			li.active 
	section.content
		.box
			.box-header.with-border
				h3.box-title
					| Edit Data Customer
				.box-tools.pull-right
					button(type='button', data-widget='collapse', data-toggle='tooltip',title='collapse').btn.btn-box-tool
						i.fa.fa-minus
					
			.box-body
				form(role='form',method='post' action='/customers/edit/#{(id==undefined) ? data.id : id}')
					.row
						
						.col-xs-6
							.box-body
								- if (messages.msg_error) 
									.alert.alert-danger.alert-dismissable 
										button.close(type='button', data-dismiss='alert', aria-hidden='true') 
											| ×
										h4
											i.icon.fa.fa-ban
											| Alert! 
										| !{messages.msg_error}
								- if (messages.msg_info) 
									.alert.alert-success.alert-dismissable 
										button.close(type='button', data-dismiss='alert', aria-hidden='true') 
											| ×
										h4
											i.icon.fa.fa-ban
											| Success! 
										| !{messages.msg_info}
								.form-group
									label
										| Nama Customer
									input(type='text',value="#{data.nama}",name='nama',placeholder='Enter Nama', autofocus).form-control
								.form-group
									label
										| Id Customer
									input(type='text',value="#{ (id_cust == undefined) ? data.id_cust : id_cust }",name='id_cust',placeholder='Enter Id Customer').form-control
								.form-group
									label
										| Alamat
									input(type='text',value="#{ (alamat == undefined) ? data.alamat : alamat }",name='alamat',placeholder='Enter Alamat').form-control
								.form-group
									label
										| Pembayaran
									input(type='text',value="#{ (pembayaran == undefined) ? data.pembayaran : pembayaran }",name='pembayaran',placeholder='Enter Pembayaran').form-control
								.form-group
									label
										| Tanggal
									input(type='text',value="#{ (tanggal == undefined) ? data.tanggal : tanggal }",name='tanggal',placeholder='Enter Tanggal').form-control
							.box-footer
								input(type="hidden",name="_method", value="PUT")
								button(type='submit').btn.btn-primary
									i.fa.fa-pencil 
									|  Edit
								a(href='/customers').btn.btn-primary.pull-right
									| Back